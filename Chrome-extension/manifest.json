{
    "name": "Chrome Demo",
    "description": "Some cool description",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon" : {
            "16":"favicon.png",
            "32":"favicon.png",
            "48":"favicon.png",
            "128":"favicon.png"
        }

    },
    
    "icons": {
        "16":"favicon.png",
        "32":"favicon.png",
        "48":"favicon.png",
        "128":"favicon.png"
    },
    "permissions": ["storage", "activeTab", "scripting"]
}